                        <i class="ri-home-line ri-xl"></i> Início
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="nav-link text-white">
                        <i class="ri-home-line ri-xl"></i> Acessar
                    </a>
                {% endif %}
            </li>

            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="nav-item">
                    <a href="{{ path('crianca_registros') }}" class="nav-link text-white">
                        <i class="ri-article-line ri-xl"></i> Registros
                    </a>
                </li>

                <li class="nav-item">
                    {#<a class="nav-link text-white">
                        <i class="ri-user-settings-line ri-xl"></i> Crianças
                    </a>#}
