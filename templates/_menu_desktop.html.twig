{% if is_granted('ROLE_USER') %}
    <div class="position-fixed" style="bottom: 105px; right: 50px; z-index: 9999;">
        <div class="collapse" id="novo-collapse">
            <div class="btn-group-vertical">
                <a href="{{ path('amamentacao') }}" class="btn btn-outline-primary"><i class="ri-hearts-line"></i></a>
                <a href="{{ path('bebida') }}" class="btn btn-outline-primary"><i class="ri-thermometer-line"></i></a>
