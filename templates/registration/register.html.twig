{% extends 'base.html.twig' %}

{% block title %}Registrar-se{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Registrar-se</h1>

    {{ form_start(registrationForm) }}
    <div class="row">
        <div class="col-md">
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': registrationForm.email.vars.label}}) }}
                {{ form_label(registrationForm.email) }}
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md">
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': registrationForm.plainPassword.first.vars.label}}) }}
                {{ form_label(registrationForm.plainPassword.first) }}
            </div>
        </div>

        <div class="col-md">
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': registrationFom.plainPassword.second.vars.label}}) }}
                {{ form_label(registrationForm.plainPassword.second) }}
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md">
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'placeholder': registrationForm.agreeTerms.vars.label}}) }}
                {{ form_label(registrationForm.agreeTerms) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    {{ form_end(registrationForm) }}
{% endblock %}
